<BorderPane onKeyReleased="#teclaPressionadaAction" onMouseReleased="#teclaRatoLibertadaAction" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.isep.dei.pl18.ui.JanelaPrincipalUI">
   <bottom>
      <GridPane vgap="5.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="btnAdicionarTarefas" defaultButton="true" mnemonicParsing="false" onAction="#adicionarTarefaAction" GridPane.halignment="CENTER" />
            <Button fx:id="btnLimparTarefas" disable="true" mnemonicParsing="false" onAction="#limparTarefasAction" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </GridPane>
   </bottom>
   <right>
      <TextArea fx:id="txtAreaTarefas" editable="false" prefWidth="400.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" top="5.0" />
         </BorderPane.margin></TextArea>
   </right>
</BorderPane>
